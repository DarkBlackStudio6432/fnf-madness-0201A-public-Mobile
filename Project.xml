<?xml version="1.0" encoding="utf-8"?>
<project>

    <!-- ================= Application ================= -->

    <app title="MADNESS INCIDENT 0201A"
         file="MADNESS"
         package="com.shadowmario.psychengine"
         main="Main"
         version="0.2.8"
         company="dataLand" />

    <app preloader="flixel.system.FlxPreloader" />

    <window width="1280" height="720" background="#000000" hardware="true" vsync="false" />

    <window if="desktop" orientation="landscape" fullscreen="false" resizable="true"/>
    <window if="android" orientation="landscape" fullscreen="true" resizable="false"/>

    <!-- ================= Paths ================= -->

    <classpath name="source" />

    <set name="BUILD_DIR" value="export/debug" if="debug"/>
    <set name="BUILD_DIR" value="export/release" unless="debug"/>

    <!-- ================= Psych Engine Flags ================= -->

    <!-- DESKTOP ONLY -->
    <define name="MODS_ALLOWED" if="desktop"/>
    <define name="HSCRIPT_ALLOWED" if="desktop"/>
    <define name="LUA_ALLOWED" if="desktop"/>
    <define name="DISCORD_ALLOWED" if="desktop"/>
    <define name="VIDEOS_ALLOWED" if="desktop"/>

    <!-- ================= Assets ================= -->

    <assets path="assets/fonts"/>
    <assets path="assets/shared" exclude="*.ogg" if="web"/>
    <assets path="assets/shared" exclude="*.mp3" unless="web"/>

    <assets path="assets/songs" library="songs"/>
    <assets path="assets/week_assets" library="week_assets" rename="assets"/>

    <library name="songs" preload="true"/>
    <library name="week_assets" preload="true"/>

    <!-- ================= Libraries ================= -->

    <haxelib name="flixel"/>
    <haxelib name="flixel-ui"/>
    <haxelib name="flixel-addons"/>
    <haxelib name="tjson"/>
    <haxelib name="flxanimate"/>

    <!-- DESKTOP ONLY LIBS -->
    <haxelib name="linc_luajit" if="desktop"/>
    <haxelib name="SScript" if="desktop"/>
    <haxelib name="hxvlc" if="desktop"/>
    <haxelib name="hxdiscord_rpc" if="desktop"/>

    <!-- ================= Haxe Flags ================= -->

    <haxedef name="FLX_NO_FOCUS_LOST_SCREEN"/>
    <haxedef name="FLX_NO_DEBUG" unless="debug"/>
    <haxedef name="no-deprecation-warnings"/>

    <!-- ================= Icons ================= -->

    <icon path="art/icon16.png" size="16"/>
    <icon path="art/icon32.png" size="32"/>
    <icon path="art/icon64.png" size="64"/>
    <icon path="art/iconOG.png"/>

</project>